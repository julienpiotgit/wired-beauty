{% extends 'base.html.twig' %}

{% block title %}Campaign{% endblock %}

{% block body %}
    <h1>Campaign</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ campaign.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ campaign.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ campaign.description }}</td>
            </tr>
            <tr>
                <th>Date_start</th>
                <td>{{ campaign.dateStart ? campaign.dateStart|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_end</th>
                <td>{{ campaign.dateEnd ? campaign.dateEnd|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ campaign.file }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_qcm_index') }}">back to list</a>

    <a href="{{ path('app_qcm_edit', {'id': campaign.id}) }}">edit</a>

    {{ include('qcm/_delete_form.html.twig') }}
{% endblock %}
