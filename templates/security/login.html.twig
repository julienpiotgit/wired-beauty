{% extends 'base.html.twig' %}

{% block title %}Log in to your account{% endblock %}

{% block body %}
    <section class="section-formulaire">
        <div class="container">
            <div class="col-lg-6 mx-auto">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            {{ 'nav.authenticate' | trans }} {{ app.user.username }}, <a href="{{ path('app_logout') }}">{{ 'button.logout' | trans }}</a>
                        </div>
                    {% endif %}

                    <h1 class="h3 mb-3 text-uppercase text-white">{{ 'titleSection.connexion' | trans }}</h1>
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                           autocomplete="email" required autofocus>
                    <label for="inputPassword">{{ 'form.password' | trans }}</label>
                    <input type="password" name="password" id="inputPassword" class="form-control"
                           autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

                    <button class="main-link" type="submit">
                        {{ 'button.login' | trans }}
                    </button>
                </form>
            </div>

        </div>

    </section>
{% endblock %}
